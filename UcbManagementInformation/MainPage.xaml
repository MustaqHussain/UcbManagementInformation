                <GradientStop Color="#ffffffff" Offset="1"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.Clip>
            <RectangleGeometry Rect="0,0,1024,768" />

        </Grid.Clip>
        
        <VisualStateManager.VisualStateGroups>

            <VisualStateGroup x:Name="MenuStates">
                <VisualState x:Name="Showing">
                    <Storyboard>
                        <DoubleAnimation Duration="00:00:00.0"
                                         To="0"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                         Storyboard.TargetName="MenuCanvas" />
                        <DoubleAnimation Duration="00:00:00.5"
                                         To="1"
                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                         Storyboard.TargetName="MenuCanvas" />
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Hidden">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                       Storyboard.TargetName="MenuCanvas">
                            <DiscreteDoubleKeyFrame KeyTime="00:00:00.99"
                                                    Value="0">
                            </DiscreteDoubleKeyFrame>
                            <DiscreteDoubleKeyFrame KeyTime="00:00:01.0"
                                                    Value="1200">
                            </DiscreteDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimation Duration="00:00:01.0"
                                         To="0"
                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                         Storyboard.TargetName="MenuCanvas" />
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>
            <VisualStateGroup x:Name="MessageStates">
                <VisualState x:Name="MessageShowing">
                    <Storyboard>
                        <DoubleAnimation Duration="00:00:00.5"
                                         To="0"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         Storyboard.TargetName="MessageCanvas" />
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="MessageHidden">
                    <Storyboard>
                        <DoubleAnimation Duration="00:00:00.5"
                                         To="170"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         Storyboard.TargetName="MessageCanvas" />
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>
            <VisualStateGroup x:Name="MessengerStates">
                <VisualState x:Name="MessengerShowing">
                    <Storyboard>
                        <DoubleAnimation Duration="00:00:00.5"
                                         To="0"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         Storyboard.TargetName="MessengerCanvas" />
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="MessengerHidden">
                    <Storyboard>
                        <DoubleAnimation Duration="00:00:00.5"
                                         To="370"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         Storyboard.TargetName="MessengerCanvas" />
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
            
        <Border x:Name="ContentBorder"
                Margin="0,76,0,30" s:Authorization.RequiresRole="UCB-MI-USER">
            <navigation:Frame x:Name="ContentFrame"
                              Source="{Binding Path=CurrentUrl,Mode=TwoWay}"
                              Navigated="ContentFrame_Navigated"
                              NavigationFailed="ContentFrame_NavigationFailed"
                              Style="{StaticResource ContentFrameStyle}"
                              s:Authorization.NavigationMode="Redirect">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Navigating">
                        <ei:GoToStateAction StateName="Hidden"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <navigation:Frame.UriMapper>
                    <uriMapper:UriMapper>
                        <uriMapper:UriMapping Uri=""
                                              MappedUri="/Views/Home.xaml" />
                        <uriMapper:UriMapping Uri="/{pageName}"
                                              MappedUri="/Views/{pageName}.xaml" />
                    </uriMapper:UriMapper>
                </navigation:Frame.UriMapper>
            </navigation:Frame>
        </Border>
		
